@using Admin_Panel.Utilities
@model SignUp_Partial_VM

<form class="d-flex justify-content-center align-items-center min-vh-100 bg-light text-dark"
      asp-action="@Model.ActionName" method="post">
    <div class="card shadow-lg p-4" style="width: 400px;">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Create New User</h4>
        </div>
        <div class="card-body">

            <!-- First Name -->
            <div class="mb-3">
                <label asp-for="userCreationVM.FirstName" class="form-label fw-bold"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                    <input class="form-control" placeholder="Enter first name" asp-for="userCreationVM.FirstName" />
                </div>
                <span asp-validation-for="userCreationVM.FirstName" class="text-danger fw-bold"></span>
            </div>

            <!-- Last Name -->
            <div class="mb-3">
                <label asp-for="userCreationVM.LastName" class="form-label fw-bold"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                    <input class="form-control" placeholder="Enter last name" asp-for="userCreationVM.LastName" />
                </div>
                <span asp-validation-for="userCreationVM.LastName" class="text-danger fw-bold"></span>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="userCreationVM.Email" class="form-label fw-bold"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                    <input class="form-control" placeholder="Enter email" asp-for="userCreationVM.Email" />
                </div>
                <span asp-validation-for="userCreationVM.Email" class="text-danger fw-bold"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label asp-for="userCreationVM.Password" class="form-label fw-bold"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                    <input type="password" class="form-control" placeholder="Enter password" asp-for="userCreationVM.Password" />
                </div>
                <span asp-validation-for="userCreationVM.Password" class="text-danger fw-bold"></span>
            </div>


            <!-- Street -->
            <div class="mb-3">
                <label asp-for="userCreationVM.Street" class="form-label fw-bold"></label>
                <input class="form-control" placeholder="Street" asp-for="userCreationVM.Street" />
                <span asp-validation-for="userCreationVM.Street" class="text-danger fw-bold"></span>
            </div>

            <!-- City -->
            <div class="mb-3">
                <label asp-for="userCreationVM.City" class="form-label fw-bold"></label>
                <input class="form-control" placeholder="City" asp-for="userCreationVM.City" />
                <span asp-validation-for="userCreationVM.City" class="text-danger fw-bold"></span>
            </div>

            <!-- Country -->
            <div class="mb-3">
                <label asp-for="userCreationVM.Country" class="form-label fw-bold"></label>
                <input class="form-control" placeholder="Country" asp-for="userCreationVM.Country" />
                <span asp-validation-for="userCreationVM.Country" class="text-danger fw-bold"></span>
            </div>

            <!-- Validation Summary -->
            <div asp-validation-summary="All" class="text-danger fw-bold mb-3"></div>

            <!-- Submit Button -->
            <div class="d-grid">
                <button class="btn btn-success btn-lg">
                    <i class="fa fa-plus-circle me-2"></i>Create User
                </button>
            </div>
        </div>
    </div>
</form>

