@using Admin_Panel.Utilities
@model RoleBaseVM

<div class="mt-3">
    @for (int i = 0; i < @Model.Privileges.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" name="Privileges[@i].First" value="@Model.Privileges[i].First" />
            <input class="form-check-input" type="checkbox" value="true" id="@i" name="Privileges[@i].Second" @(Model.Privileges[i].Second ? "Checked" : "")>
            <label class="form-check-label" for="@i">
                @Model.Privileges[i].First.GetDisplayName()
            </label>
        </div>
    }
</div>
